<% include ../partials/head %>
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('/img/shelf-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>My Bookshelf</h1>
                    <hr class="small">
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Shelf Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class="post-preview">
                <h2 class="post-title">
                    <%=book.title%>
                </h2>
                <p class="post-meta">Written by <a href="#"><%=book.author%></a></p>
            </div>
        </div>
    </div>
</div>
<hr>
<% include ../partials/footer %>